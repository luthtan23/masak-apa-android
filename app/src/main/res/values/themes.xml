    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="AppBottomSheetDialogTheme.Transparent" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle.Transparent</item>
    </style>

    <style name="AppModalStyle.Transparent" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_transparent</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.Masakapaandroid.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="TextAppearanceWhite">
        <item name="android:textColor">@color/white</item>
    </style>
